  <script>
    const questions = [
      { q: "1. Wie viele Gesellschafter braucht eine KG mindestens in Österreich?",
        a: ["Nur einen Gesellschafter","Mindestens zwei Gesellschafter","Mindestens drei Gesellschafter","Mindestens vier Gesellschafter"],
        correctIndex: 1
      },
      { q: "2. Wer haftet unbeschränkt bei einer KG?",
        a: ["Der Kommanditist","Der Komplementär","Beide gleich unbeschränkt","Keiner haftet unbeschränkt"],
        correctIndex: 1
      },
      { q: "3. Mit welchem Ereignis entsteht die KG rechtlich in Österreich?",
        a: ["Mit Abschluss des Gesellschaftsvertrages","Mit Eintragung im Firmenbuch","Mit Wahrnehmung der Geschäftsführung","Mit Einzahlung der Einlage"],
        correctIndex: 1
      },
      { q: "4. Ist für den Gesellschaftsvertrag der KG eine bestimmte Form vorgeschrieben?",
        a: ["Ja, er muss notariell beurkundet werden","Ja, er muss schriftlich sein","Nein, keine bestimmte Form gesetzlich vorgesehen","Ja, er muss öffentlich beglaubigt werden"],
        correctIndex: 2
      },
      { q: "5. Wer darf die Gesellschaft nach außen vertreten bei einer KG?",
        a: ["Nur der Kommanditist","Nur der Komplementär","Alle Gesellschafter gleich","Nur ein externer Geschäftsführer"],
        correctIndex: 1
      },
      { q: "6. Haftet der Kommanditist gegenüber Gesellschaftsgläubigern unbegrenzt?",
        a: ["Ja, in allen Fällen","Nein, er haftet nur bis zur eingetragenen Haftsumme","Ja, aber nur anteilig","Nein, er haftet gar nicht"],
        correctIndex: 1
      },
      { q: "7. Muss eine KG in Österreich zwingend einen schriftlichen Vertrag haben?",
        a: ["Ja, der Vertrag muss schriftlich sein","Nein, er darf auch mündlich sein","Nein, kein Vertrag nötig","Ja, privat beglaubigt"],
        correctIndex: 1
      },
      { q: "8. Darf der Firmenwortlaut einer KG den Zusatz „KG“ nicht enthalten?",
        a: ["Ja, er darf fehlen","Nein, der Zusatz ist zwingend","Ja, wenn Kommanditist zustimmt","Nein, nur „Kommanditgesellschaft“ darf stehen"],
        correctIndex: 1
      },
      { q: "9. Darf eine KG nach österreichischem Recht frei gewähltem Zweck dienen?",
        a: ["Nein, nur Handelsgewerbe","Ja, auch freie Berufe oder Landwirtschaft möglich","Nur Industrieunternehmen","Nur Dienstleistungsunternehmen"],
        correctIndex: 1
      },
      { q: "10. In welchem Gesetz sind die Grundlagen der KG geregelt?",
        a: ["Im Aktiengesetz (AktG)","Im GmbH-Gesetz (GmbHG)","Im Unternehmensgesetzbuch (UGB)","Im Handelsgesetzbuch (HGB)"],
        correctIndex: 2
      }
    ];

    const form = document.getElementById('quizForm');
    const submitBtn = document.getElementById('submitBtn');
    const resetBtn = document.getElementById('resetBtn');
    const resultBox = document.getElementById('resultBox');
    const scoreText = document.getElementById('scoreText');
    const progressBar = document.getElementById('progressBar');

    function safeId(s){ return btoa(unescape(encodeURIComponent(s))).replace(/=/g,''); }

    questions.forEach((item, qi) => {
      const qWrap = document.createElement('div');
      qWrap.className = 'question';
      const h = document.createElement('h3');
      h.textContent = item.q;
      qWrap.appendChild(h);
      const meta = document.createElement('div');
      meta.className = 'meta';
      meta.textContent = `Frage ${qi+1} von ${questions.length}`;
      qWrap.appendChild(meta);
      const answers = document.createElement('div');
      answers.className = 'answers';
      item.a.forEach((text, ai) => {
        const id = `q${qi}_${safeId(text)}`;
        const label = document.createElement('label');
        label.className = 'answer';
        label.innerHTML = `<input type="radio" name="q${qi}" id="${id}" value="${ai}"><span>${text}</span>`;
        if(ai===item.correctIndex) label.dataset.correct="true";
        answers.appendChild(label);
      });
      qWrap.appendChild(answers);
      form.appendChild(qWrap);
    });

    submitBtn.addEventListener('click', ()=>{
      let score=0;
      questions.forEach((q,qi)=>{
        const selected=form.querySelector(`input[name="q${qi}"]:checked`);
        const answers=form.querySelectorAll(`input[name="q${qi}"]`);
        answers.forEach(a=>{
          const label=a.parentElement;
          label.classList.add('disabled');
          if(label.dataset.correct) label.classList.add('correct');
          if(selected && a===selected && !label.dataset.correct) label.classList.add('wrong');
        });
        if(selected && parseInt(selected.value)===q.correctIndex) score++;
      });
      scoreText.textContent=`Du hast ${score} von ${questions.length} Punkten erreicht.`;
      progressBar.style.width=(score/questions.length*100)+'%';
      resultBox.style.display='flex';
      submitBtn.disabled=true;
      form.querySelectorAll('input').forEach(i=>i.disabled=true);
    });

    resetBtn.addEventListener('click',()=>{
      form.innerHTML='';
      submitBtn.disabled=false;
      resultBox.style.display='none';
      progressBar.style.width='0';
      scoreText.textContent='Du hast 0 von 10 Punkten erreicht.';
      // Neu aufbauen
      questions.forEach((item, qi)=>{
        const qWrap=document.createElement('div');
        qWrap.className='question';
        const h=document.createElement('h3');
        h.textContent=item.q;
        qWrap.appendChild(h);
        const meta=document.createElement('div');
        meta.className='meta';
        meta.textContent=`Frage ${qi+1} von ${questions.length}`;
        qWrap.appendChild(meta);
        const answers=document.createElement('div');
        answers.className='answers';
        item.a.forEach((text, ai)=>{
          const id=`q${qi}_${safeId(text)}`;
          const label=document.createElement('label');
          label.className='answer';
          label.innerHTML=`<input type="radio" name="q${qi}" id="${id}" value="${ai}"><span>${text}</span>`;
          if(ai===item.correctIndex) label.dataset.correct="true";
          answers.appendChild(label);
        });
        qWrap.appendChild(answers);
        form.appendChild(qWrap);
      });
    });
  </script>
</body>
</html>
